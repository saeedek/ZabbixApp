<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vodafone.zabbixapp.activities.ScriptDetailActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Execute"
        android:id="@+id/btnExe"
        android:layout_marginTop="64dp"
        android:textColor="#040404"
        android:layout_below="@+id/txtCmd"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:id="@+id/txt_exe_result"
        android:layout_below="@+id/btnExe"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:inputType="text|textMultiLine"
        android:linksClickable="false"
        android:lines="20"
        android:layout_alignParentEnd="true"
        android:textColor="#040404"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Command:"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#060606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="..."
        android:id="@+id/txtCmd"
        android:textColor="#060606"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Response:"
        android:id="@+id/textView5"
        android:layout_below="@+id/btnExe"
        android:layout_alignParentStart="true"
        android:textColor="#020100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="...."
        android:id="@+id/txtResponse"
        android:layout_below="@+id/btnExe"
        android:layout_centerHorizontal="true"
        android:textColor="#040300" />

</RelativeLayout>
